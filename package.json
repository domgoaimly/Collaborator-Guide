{
  "name": "techguides",
  "description": "Develop and ExpressJS webserver using TypeScript for technical guides.",
  "main": "start.js",
  "version": "0.1.0-rc.0",
  "scripts": {
    "test": "none",
    "dev-start": "ts-node-dev --transpile-only=${TS_NODE_TRANSPILE_ONLY:-false} --respawn --inspect -- src/start.ts",
    "build": "rm -rf ./build/ && tsc",
    "start": "node build/start.js",
    "start-dev": "nodemon --config \"./util/nodemon.json\"/",
    "dev": "npm run prepare && ts-node-dev --transpile-only=${TS_NODE_TRANSPILE_ONLY:-false} --respawn --inspect -- src/main/index.ts",
    "compile": "tsc --listEmittedFiles",
    "lint": "./node_modules/.bin/eslint 'src/**/*.ts'",
    "test-no": "jest --forceExit",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "prepare": "husky install"
  },
  "keywords": [
    "Express",
    "TypeScript",
    "ts",
    "ex",
    "expressjs",
    "overnight",
    "overnightjs",
    "node",
    "web",
    "webserver",
    "server"
  ],
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@overnightjs/logger": "^1.2.1",
    "body-parser": "^1.20.1",
    "express": "^4.18.2"
  }
}
